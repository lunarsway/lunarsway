%h1 Edit News Item

= error_messages_for :news_item

- form_for(@news_item) do |f|
  %p
    %b Date
    %br/
    = f.datetime_select :created_at

  %p
    %b Title
    %br/
    = f.text_field :title, :class => "text"

  %p
    %b Author
    %br/
    = f.text_field :author, :class => "text"

  %p
    %b Body
    %br/
    = f.text_area :body, :class => "text", :rows => "5", :cols => "45"

  %p
    = f.submit "Update"

= link_to 'Show', @news_item
|
= link_to 'Back', news_items_path
