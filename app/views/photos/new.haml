%h1 New Photo

= error_messages_for :photo

- form_for(Photo.new, :html => {:enctype => 'multipart/form-data'}) do |f|
  %p
    %b Upload Image
    %br/
    = f.file_field :file, :class => "text"
  .floatl{:style => "margin-right: 25px;"}
    %p
      %b Caption
      %br/
      = f.text_field :caption

    %p
      %b Credit
      %br/
      = f.text_field :credit
  .floatl
    %p
      %b Description
      %br/
      = f.text_area :description, :rows => "5", :cols => "45"
  .clear
  %p
    = f.submit "Create"

= link_to 'Back', photos_path
