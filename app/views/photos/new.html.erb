<h1>New photo</h1>

<%= error_messages_for :photo %>

<% form_for(@photo) do |f| %>
  <p>
    <b>Caption</b><br />
    <%= f.text_field :caption %>
  </p>

  <p>
    <b>Credit</b><br />
    <%= f.text_field :credit %>
  </p>

  <p>
    <b>Description</b><br />
    <%= f.text_area :description %>
  </p>

  <p>
    <b>Position</b><br />
    <%= f.text_field :position %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', photos_path %>
