.mailing_list_join
  - form_tag mailing_list_items_path, :id => 'mailing_list_form' do
    email:
    = text_field_tag "mailing_list_item[email]", "", :id => 'mailing_list_join'
    = submit_tag "join!"
  
%h3 Recent News

.home_news
  - for news_item in @news_items
    .news_item
      .title
        = news_item.created_at.strftime("%M %d, %Y")
        =h news_item.title
      .posted_by
        by
        =h news_item.author
        at
        = news_item.created_at.strftime("%I:%M %p")
      .body
        = truncate nl2br(news_item.body), 300
        %br/
        = link_to '(read more)', news_item
        - if logged_in?
          - if current_user.has_role?('administrator')
            %br/
            = link_to "(edit)", edit_news_item_path(news_item)
            = link_to "(delete)", news_item, :confirm => 'Are you sure?', :method => :delete
